<Window x:Name="Contacts" x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Closing="MainWindow_Closing"
        Title="Contacts" Height="500" Width="800" MinHeight="400" MinWidth="600" WindowStartupLocation="CenterScreen">
    <Grid Margin="15,15,15,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" MinWidth="200"></ColumnDefinition>
            <ColumnDefinition Width="3"></ColumnDefinition>
            <ColumnDefinition MinWidth="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox x:Name="EditContactGroupBox" Header="" Grid.Column="2" Grid.Row="0" Margin="3,-17,3,23" Height="NaN" Width="NaN" BorderThickness="0,0,0,0">
            <Grid Width="NaN" Height="NaN">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <StackPanel DataContext="{Binding SelectedContact}" Grid.Column="2" Orientation="Vertical" Margin="3,3,3,3">
                    <Label x:Name="EditNameLabel" Content="Name:" d:LayoutOverrides="Width" Margin="-3,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26"/>
                    <TextBox x:Name="NameTextBox" IsReadOnly="{Binding IsControlElementReadOnly}" TextWrapping="Wrap" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Height="18" Margin="3,0,3,0" VerticalAlignment="Top" HorizontalContentAlignment="Stretch"/>
                    <Label x:Name="EditPhoneLabel" Content="Phone Number:" d:LayoutOverrides="Width" Margin="-3,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26"/>
                    <TextBox x:Name="PhoneTextBox" IsReadOnly="{Binding IsControlElementReadOnly}" TextWrapping="Wrap" Text="{Binding PhoneNumber, UpdateSourceTrigger=PropertyChanged}" Height="18" VerticalAlignment="Top" Margin="3,0,3,0" HorizontalContentAlignment="Stretch"/>
                    <Label x:Name="EditEmailLabel" Content="Email:" d:LayoutOverrides="Width" Margin="-3,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Height="26"/>
                    <TextBox x:Name="EmailTextBox" IsReadOnly="{Binding IsControlElementReadOnly}" TextWrapping="Wrap" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Height="18" VerticalAlignment="Top" Margin="3,0,3,0" HorizontalContentAlignment="Stretch"/>
                    <Button Content="Apply" Visibility="{Binding IsControlElementVisible}" Width="75" HorizontalAlignment="Left" Margin="3,50,3,3" Height="25"/>
                </StackPanel>
                <Image HorizontalAlignment="Left" Height="100" VerticalAlignment="Top" Width="100" Margin="0,29,0,0"/>
            </Grid>
        </GroupBox>
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Width="NaN" Height="NaN" Margin="0,0,0,0" Background="White"/>
        <StackPanel Background="#FFF8F8F8">
            <Grid Height="29">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="48"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Find:" HorizontalAlignment="Left" Margin="3,3,3,3" VerticalAlignment="Top"/>
                <TextBox Grid.Column="1" Margin="3,6,3,3" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top"/>
            </Grid>
            <ListBox ItemsSource="{Binding Contacts}" SelectedItem="{Binding SelectedContact}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Visible" Height="391">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding Path=Name}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid Height="29" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Add" IsEnabled="{Binding IsControlElementEnabled}" Command="{Binding AddCommand}" Margin="0,0,0,3" Height="25" Width="80" HorizontalAlignment="Left"/>
                <Button Grid.Column="1" IsEnabled="{Binding IsControlElementEnabled}"  Content="Edit" Command="{Binding EditCommand}" Margin="3,0,0,3" Height="25" Width="80" HorizontalAlignment="Left"/>
                <Button Grid.Column="2" IsEnabled="{Binding IsControlElementEnabled}" Content="Remove" Margin="3,0,0,3" Height="25" Width="79" HorizontalAlignment="Left"/>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
