<Window x:Name="Contacts" x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        SizeToContent="WidthAndHeight"
        Title="Contacts" Height="420" Width="600" MinHeight="400" MinWidth="450" WindowStartupLocation="CenterScreen">
    <Grid Margin="15,15,15,15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="320"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <GroupBox x:Name="EditContactGroupBox" Header="Edit Contact" Grid.Column="0" Grid.Row="0" Margin="3,3,3,3" Height="NaN" Width="NaN">
            <StackPanel Orientation="Vertical" Height="291" Width="267">
                <Label x:Name="EditNameLabel" Content="Name:" d:LayoutOverrides="Width, Height" Margin="-3,0,0,0"/>
                <TextBox x:Name="NameTextBox" TextWrapping="Wrap" Text="{Binding Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="NaN" Margin="0,-3,0,0"/>
                <Label x:Name="EditPhoneLabel" Content="Phone Number:" d:LayoutOverrides="Width, Height" Margin="-3,6,0,0"/>
                <TextBox x:Name="PhoneTextBox" TextWrapping="Wrap" Text="{Binding PhoneNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="NaN" Margin="0,-3,0,0"/>
                <Label x:Name="EditEmailLabel" Content="Email:" d:LayoutOverrides="Width, Height" Margin="-3,6,0,0"/>
                <TextBox x:Name="EmailTextBox" TextWrapping="Wrap" Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Height="NaN" Margin="0,-3,0,0"/>
            </StackPanel>
        </GroupBox>
        <GroupBox x:Name="ReadContactGroupBox" Header="Read Contact" Grid.Column="1" Grid.Row="0" Margin="3,3,3,3" Height="NaN" Width="NaN">
            <StackPanel Orientation="Vertical" Height="291" Width="267">
                <Label x:Name="NameLabel" Content="Name:" d:LayoutOverrides="Width, Height" Margin="-3,0,0,0"/>
                <Label x:Name="Name" Content="{Binding Name}" d:LayoutOverrides="Width, Height" FontWeight="Bold" Margin="-3,-6,0,0"/>
                <Label x:Name="PhoneLabel" Content="Phone Number:" d:LayoutOverrides="Width, Height" Margin="-3,0,0,0"/>
                <Label x:Name="PhoneNumber" Content="{Binding PhoneNumber}" d:LayoutOverrides="Width, Height" FontWeight="Bold" Margin="-3,-6,0,0"/>
                <Label x:Name="EmailLabel" Content="Email:" d:LayoutOverrides="Width, Height" Margin="-3,0,0,0"/>
                <Label x:Name="Email" Content="{Binding Email}" d:LayoutOverrides="Width, Height" FontWeight="Bold" Margin="-3,-6,0,0"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="SaveButton" Grid.Column="1" Content="Save" HorizontalAlignment="Right" Margin="0,0,0,47" Grid.Row="1" VerticalAlignment="Bottom" Width="75" Height="25" Command="{Binding SaveCommand}"/>
        <Button x:Name="LoadButton" Grid.Column="1" Content="Load" HorizontalAlignment="Right" Margin="0,0,80,47" Grid.Row="1" VerticalAlignment="Bottom" Width="75" Height="25" Command="{Binding LoadCommand}"/>
    </Grid>
</Window>
